FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Copy neuroion package and install Python dependencies
COPY neuroion/core/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY neuroion/ ./neuroion/

# Run telegram bot (module lives in neuroion.telegram)
ENV PYTHONPATH=/app
CMD ["python", "-m", "neuroion.telegram.bot"]
